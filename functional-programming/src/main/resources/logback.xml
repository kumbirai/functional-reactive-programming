<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%yellow(%d{HH:mm:ss.SSS}) %highlight(%level) %green([%thread]) %cyan(%logger{15}) - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.kumbirai.udemy" level="debug"/>
    <logger name="com.github.javafaker" level="debug"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
